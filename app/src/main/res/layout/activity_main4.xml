<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo1"
    tools:context=".MainActivity4">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REFRESCOS"
        android:textSize="30dp"
        android:fontFamily="casual"
        android:textStyle="italic"
        android:textColor="@color/white"
        android:layout_marginTop="35dp"
        android:layout_marginStart="117dp"/>

    <EditText
        android:id="@+id/refresco1"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:layout_marginTop="180dp"
        android:layout_marginStart="170dp"
        android:hint="0"
        android:inputType="text"
        android:gravity="center"
        android:textColor="@color/white"
        android:textColorHint="@color/white"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/coca_cola"
        android:layout_marginTop="130dp"
        android:layout_marginStart="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cola Cola   $17.00"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_marginTop="140dp"
        android:layout_marginStart="140dp"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/pepsi"
        android:layout_marginTop="300dp"
        android:layout_marginStart="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pepsi   $17.00"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_marginTop="310dp"
        android:layout_marginStart="140dp"/>

    <EditText
        android:id="@+id/refresco2"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:layout_marginTop="345dp"
        android:layout_marginStart="150dp"
        android:hint="0"
        android:inputType="text"
        android:gravity="center"
        android:textColor="@color/white"
        android:textColorHint="@color/white"/>

    <ImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@drawable/fanta"
        android:layout_marginTop="450dp"
        android:layout_marginStart="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fanta   $17.00"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_marginTop="460dp"
        android:layout_marginStart="140dp" />

    <EditText
        android:id="@+id/refresco3"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:layout_marginTop="500dp"
        android:layout_marginStart="150dp"
        android:hint="0"
        android:inputType="text"
        android:gravity="center"
        android:textColor="@color/white"
        android:textColorHint="@color/white"/>

    <Button
        android:id="@+id/regresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PIZZAS"
        android:textSize="10sp"
        android:layout_marginTop="650dp"
        android:layout_marginStart="30dp"/>

    <Button
        android:id="@+id/pagar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FINALIZAR PEDIDO"
        android:textSize="10sp"
        android:layout_marginTop="650dp"
        android:layout_marginStart="220dp"/>

</RelativeLayout>